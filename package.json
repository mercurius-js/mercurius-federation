  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "eslint": "^8.25.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "fastify": "^4.9.2",
    "graphql-ws": "^5.11.2",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "mqemitter": "^5.0.0",
    "prettier": "^2.7.1",
    "tap": "^16.0.0",
    "tsd": "^0.24.1",
